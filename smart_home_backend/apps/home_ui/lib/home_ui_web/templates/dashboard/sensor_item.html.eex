<div class="grid grid-cols-3 gap-3 max-w-auto rounded overflow-hidden shadow-sm my-2 p-2">
  <%= if @sensor.state["value"] do %>
    <img class="w-12 h-12" src="<%= Routes.static_path(@socket, "/images/active_sensor.png") %>"/>
  <% else %>
    <img class="w-12 h-12" src="<%= Routes.static_path(@socket, "/images/sensor.png") %>"/>
  <% end %>
  <div class="col-span-2">
    <h2><%= @sensor.name %></h2>
  </div>
</div>
